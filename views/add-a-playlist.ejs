<%- include('./partials/head') %>

<main class="newPlaylistPage">
    <a href="/lessons" id="backIcon"> <%- include('./partials/backSVG') %> </a>
    <h1>New Playlist</h1>
    <form method="post">
        <div class="image-preview-container">
            <div class="preview">
            <label for="image-upload">
                <img src=# alt="Preview uploaded image"  id="addImg"> <%- include('./partials/cameraSVG') %>
                Selecteer je afbeelding</label>
            <input type="file" id="image-upload" accept="image/*" onchange="previewImage(event);" />
        </div>
        </div>
        <input id="playlistName" type="text" required placeholder="Name playlist" name="NewPlaylists">
        <button id="submitPL" type="submit">Make playlist</button>
    </form>
    <a href="/lessons" id="showPL">Show playlists</a>
</main>

